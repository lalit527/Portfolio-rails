<div class="col-md-4">
  <div class="card mb-4 box-shadow">
    <%= image_tag item.thumb_image unless item.thumb_image.nil? %>
    <div class="card-body">
      <p class="card-text">
        <span><%= link_to item.title, portfolio_show_path(item) %></span>
        <small><%= item.subtitle %></small>
      </p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary">
            <%= link_to "Edit", edit_portfol_path(item) if logged_in?(:site_admin ) %>
          </button>
          <button type="button" class="btn btn-sm btn-outline-secondary">
            <%= link_to 'Delete', portfol_path(item), method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin ) %>
          </button>
        </div>
        <small class="text-muted"><%= item.created_at %></small>
      </div>
    </div>
  </div>
</div>
